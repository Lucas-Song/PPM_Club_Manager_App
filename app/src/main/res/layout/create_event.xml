<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Event:"
            android:textSize="24sp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/event_name"
                android:hint="Event Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/event_details"
                android:hint="Event Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/event_location"
                android:hint="Event Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/start_date_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No start date and time set" />

        <Button
            android:id="@+id/set_start_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Start Date"/>

        <Button
            android:id="@+id/set_start_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Start Time" />

        <TextView
            android:id="@+id/end_date_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No end date and time set" />

        <Button
            android:id="@+id/set_end_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set End Date" />

        <Button
            android:id="@+id/set_end_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set End Time"/>

        <TextView
            android:id="@+id/recur_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No recurrence" />

        <Button
            android:id="@+id/set_recur_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recurrence Rule"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Event"/>

    </LinearLayout>

</ScrollView>